{
  "name": "extension-template",
  "displayName": "Extension template",
  "type": "module",
  "version": "0.0.1",
  "description": "A template for creating Chrome extensions with Vue 3 and Vite",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "run-p type-check build-only",
    "build-only": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --build --force",
    "fmt": "prettier --write '**/*.{vue,ts,json,css,scss,md}'",
    "lint": "eslint --cache .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/",
    "start-hrm-chrome": "web-ext run --source-dir ./build --target=chromium",
    "start": "run-p dev start-hrm-chrome"
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^11.2.0",
    "vite-plugin-vuetify": "^2.0.4",
    "vue": "^3.5.12",
    "vuetify": "^3.7.3",
    "webext-bridge": "^6.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.28",
    "@types/chrome": "^0.0.280",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "eslint": "^9.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.10",
    "web-ext": "^8.3.0"
  }
}
